--// ‚úÖ Allowed HWIDs list
local allowedHWIDs = {
	"HWID_1234567890", -- Replace these with real HWIDs
	"HWID_0987654321",
	"HWID_1122334455"
}

--// üìå Get HWID safely
local function getHWID()
	local success, hwid = pcall(function()
		return game:GetService("RbxAnalyticsService"):GetClientId()
	end)
	return (success and hwid) or "Unknown_HWID"
end

--// üîê Check if HWID is allowed
local function checkHWID()
	local userHWID = getHWID()
	for _, hwid in ipairs(allowedHWIDs) do
		if userHWID == hwid then
			return true
		end
	end
	return false
end

--// üö∑ Kick if unauthorized
if not checkHWID() then
	game:GetService("Players").LocalPlayer:Kick("Unauthorized HWID. Access denied.")
	return
end
